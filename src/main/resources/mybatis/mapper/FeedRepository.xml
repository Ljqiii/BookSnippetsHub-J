<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ljqiii.dao.FeedRepository">

    <select id="findFeedRand" resultType="com.ljqiii.model.Feed">
        select * from feed
        <if test="arg1.size()!=0">
            where id not in (
            <foreach collection="arg1" separator="," item="item">
                #{item}
            </foreach>
            )
        </if>
        order by rand() limit #{arg0}
    </select>


    <select id="findFeedByBookid" resultType="com.ljqiii.model.Feed">
        select * from feed where bookid=#{arg2}
        <if test="arg1.size()!=0">
            and id not in (
            <foreach collection="arg1" separator="," item="item">
                #{item}
            </foreach>
            )
        </if>
        order by feedtime limit #{arg0}
    </select>


</mapper>

